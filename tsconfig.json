{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es5",
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
  },
  "paths": {
    "globalize": [
      "node_modules/globalize/dist/globalize"
    ],
    "globalize/*": [
      "node_modules/globalize/dist/globalize/*"
    ],
    "cldr": [
      "node_modules/cldrjs/dist/cldr"
    ],
    "cldr/*": [
      "node_modules/cldrjs/dist/cldr/*"
    ]
  }
}
